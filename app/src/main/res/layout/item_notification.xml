<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon container dengan background circle -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp">

            <!-- Background circle untuk icon -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/notification_icon_background" />

            <!-- Notification icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_notification_item"
                app:tint="@color/purple_primary" />

            <!-- Unread indicator (dot) -->
            <View
                android:id="@+id/viewUnreadIndicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/notification_unread_dot"
                android:visibility="visible" />
        </FrameLayout>

        <!-- Content area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title dan time dalam satu baris -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvNotificationTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Judul Notifikasi"
                    android:textColor="#1A1A1A"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvNotificationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2j"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Message -->
            <TextView
                android:id="@+id/tvNotificationMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi pesan notifikasi akan ditampilkan di sini dengan detail yang lebih lengkap."
                android:textColor="#616161"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Type indicator (optional) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/notification_type_dot"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengingat"
                    android:textColor="#9E9E9E"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Subtle border untuk unread notifications -->
    <View
        android:id="@+id/viewUnreadBorder"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/purple_primary"
        android:visibility="gone" />

</com.google.android.material.card.MaterialCardView>